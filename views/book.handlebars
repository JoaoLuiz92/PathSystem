<div id="book-page">
  <a href="/books">Voltar</a>
  <div class="container">
    <h1>{{book.id}}</h1>
    <p>Nome do cliente: {{book.name}}</p>
    <p>Nome do Aluno: {{book.student}}</p>
    <p>Data de realização: {{book.date}}</p>
    <p>Nº do certificado: {{book.certificate}}</p>
    <p>Tipo de curso: {{book.course}}</p>
    <p>Validade: {{book.expiration}}</p>
    <p>E-mail: {{book.email}}</p>
    <p>Contato: {{book.fone}}</p>
    <div class="actions">
      <a href="/books/edit/{{book.id}}">Editar</a>
      <form action="/books/remove/{{book.id}}" method="POST">
        <input type="submit" value="Remover">
      </form>
    </div>
  </div>
</div>